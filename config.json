{
    
    "proxy"      : "", 
    "projectType": "Craft",
    "favicon": {
        "appName"       : "My App",
        "appDescription": "This is my Application",
        "developerName" : "undefined",
        "developerURL"  : "http://...",
        "background"    : "#020307",
        "path"          : "favicons",
        "logging"       : false,
        "online"        : false,
        "icons"         : {
            "android"     : true,
            "appleIcon"   : true,
            "appleStartup": true,
            "coast"       : true,
            "favicons"    : true,
            "firefox"     : true,
            "opengraph"   : false,
            "twitter"     : false,
            "windows"     : true,
            "yandex"      : true
        }
    },
    "modernizr"  : {
        "options"  : [
            "setClasses",
            "addTest"
        ],
        "excludeTests": [
            "hidden"
        ],
        "tests"    : [
            "flexbox",
            "flexboxlegacy"
        ]
    },
    "minify"     : {
        "images": {
            "optimizationLevel": 3,
            "pngquant": {
                "quality": "75-88",
                "speed"  : 4
            },
            "progressive": true,
            "interlaced" : true,
            "svgoPlugins": [
                {"cleanupIDs"                : false},
                {"removeComments"            : true},
                {"removeViewBox"             : false},
                {"removeDesc"                : true},
                {"removeUselessDefs"         : false},
                {"removeDoctype"             : true},
                {"removeEmptyText"           : true},
                {"removeUnknownsAndDefaults" : true},
                {"removeEmptyContainers"     : true},
                {"collapseGroups"            : true},
                {"removeUselessStrokeAndFill": true},
                {"convertStyleToAttrs"       : true}
            ]
    }
    },
    "src"        : {
        "base"      : "src/",
        "assets"   : "assets/",
        "views"    : "views/",
        "systemFiles": "systemFiles/",
        "css"      : "scss/",
        "fonts"    : "fonts/",
        "js"       : {
            "base"    : "js/",
            "mysource": "my-source/",
            "json"    : "json/"
        },
        "favicons": "favicons/",
        "images"   : {
            "base"  : "images/",
            "svg"   : {
                "base"  : "svg/",
                "single": "single/",
                "sprite": "sprite/"
            },
            "bitmap": {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    },
    "dist"       : {
    
        "dist"     : "dist/public/",
        "views"    : "dist/templates/",
        "systemFiles": "dist/public/",
        "css"      : "assets/css/",
        "favicons": "favicons/",
        "fonts"    : "assets/fonts/",
        "js"       : "assets/js/",
        "images"   : {
            "base"  : "assets/images/",
            "svg"   : {
                "base"  : "svg/",
                "single": "single/",
                "sprite": "sprite/"
            },
            "bitmap": {
                "cssimages" : "cssimages/",
                "htmlimages": "htmlimages/"
            }
        }
    }
}


